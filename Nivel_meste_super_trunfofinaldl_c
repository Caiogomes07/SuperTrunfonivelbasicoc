#include <stdio.h>
#include <string.h>

int main() {

    // =========================
    // CARTA 1 - SAO PAULO
    // =========================

    char cidade1[50] = "Sao Paulo";
    char estado1[3] = "SP";
    int populacao1 = 12330000;
    float area1 = 1521.11;
    float pib1 = 699.28;
    int pontos1 = 50;

    // =========================
    // CARTA 2 - RIO DE JANEIRO
    // =========================

    char cidade2[50] = "Rio de Janeiro";
    char estado2[3] = "RJ";
    int populacao2 = 6748000;
    float area2 = 1200.25;
    float pib2 = 364.58;
    int pontos2 = 40;

    // =========================
    // CALCULOS
    // =========================

    float densidade1 = (float)populacao1 / area1;
    float densidade2 = (float)populacao2 / area2;

    float pibPerCapita1 = (pib1 * 1000000000) / populacao1;
    float pibPerCapita2 = (pib2 * 1000000000) / populacao2;

    int atributo1, atributo2;

    printf("\n=== SUPER TRUNFO - SAO PAULO vs RIO DE JANEIRO ===\n");

    // =========================
    // PRIMEIRO ATRIBUTO
    // =========================

    printf("\nEscolha o PRIMEIRO atributo:\n");
    printf("1 - Populacao\n");
    printf("2 - Area\n");
    printf("3 - PIB\n");
    printf("4 - Densidade Demografica\n");
    printf("5 - PIB per capita\n");
    printf("Opcao: ");
    scanf("%d", &atributo1);

    // =========================
    // SEGUNDO ATRIBUTO
    // =========================

    printf("\nEscolha o SEGUNDO atributo (diferente do primeiro):\n");

    switch(atributo1) {
        case 1: printf("2 - Area\n3 - PIB\n4 - Densidade\n5 - PIB per capita\n"); break;
        case 2: printf("1 - Populacao\n3 - PIB\n4 - Densidade\n5 - PIB per capita\n"); break;
        case 3: printf("1 - Populacao\n2 - Area\n4 - Densidade\n5 - PIB per capita\n"); break;
        case 4: printf("1 - Populacao\n2 - Area\n3 - PIB\n5 - PIB per capita\n"); break;
        case 5: printf("1 - Populacao\n2 - Area\n3 - PIB\n4 - Densidade\n"); break;
        default:
            printf("Opcao invalida!\n");
            return 0;
    }

    printf("Opcao: ");
    scanf("%d", &atributo2);

    if (atributo1 == atributo2) {
        printf("\nErro: atributos iguais!\n");
        return 0;
    }

    float v1a1, v2a1, v1a2, v2a2;

    // ATRIBUTO 1
    switch(atributo1) {
        case 1: v1a1 = populacao1; v2a1 = populacao2; break;
        case 2: v1a1 = area1; v2a1 = area2; break;
        case 3: v1a1 = pib1; v2a1 = pib2; break;
        case 4: v1a1 = densidade1; v2a1 = densidade2; break;
        case 5: v1a1 = pibPerCapita1; v2a1 = pibPerCapita2; break;
        default: printf("Opcao invalida!\n"); return 0;
    }

    // ATRIBUTO 2
    switch(atributo2) {
        case 1: v1a2 = populacao1; v2a2 = populacao2; break;
        case 2: v1a2 = area1; v2a2 = area2; break;
        case 3: v1a2 = pib1; v2a2 = pib2; break;
        case 4: v1a2 = densidade1; v2a2 = densidade2; break;
        case 5: v1a2 = pibPerCapita1; v2a2 = pibPerCapita2; break;
        default: printf("Opcao invalida!\n"); return 0;
    }

    // REGRA ESPECIAL DA DENSIDADE (menor vence)
    if (atributo1 == 4) {
        v1a1 = 1 / v1a1;
        v2a1 = 1 / v2a1;
    }

    if (atributo2 == 4) {
        v1a2 = 1 / v1a2;
        v2a2 = 1 / v2a2;
    }

    float soma1 = v1a1 + v1a2;
    float soma2 = v2a1 + v2a2;

    printf("\n--- RESULTADO ---\n");
    printf("%s (%s): %.2f + %.2f = %.2f\n",
           cidade1, estado1, v1a1, v1a2, soma1);

    printf("%s (%s): %.2f + %.2f = %.2f\n",
           cidade2, estado2, v2a1, v2a2, soma2);

    // Operador ternario
    (soma1 > soma2) ?
        printf("\nVencedor: %s!\n", cidade1) :
        (soma2 > soma1) ?
            printf("\nVencedor: %s!\n", cidade2) :
            printf("\nEmpate!\n");

    return 0;
}
